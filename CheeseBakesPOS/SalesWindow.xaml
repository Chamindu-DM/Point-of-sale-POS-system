<Window x:Class="CheeseBakesPOS.SalesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CheeseBakesPOS"
        mc:Ignorable="d"
        Title="Sales History" Height="600" Width="900">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <StackPanel Grid.Row="0" Margin="20,20,20,10">
            <TextBlock Text="Sales History" FontSize="24" FontWeight="Bold" Margin="0,0,0,10"/>
            
            <!-- Filter controls -->
            <Grid Margin="0,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="200"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="200"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <TextBlock Grid.Column="0" Text="From:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                <DatePicker Grid.Column="1" Margin="0,0,20,0"/>
                
                <TextBlock Grid.Column="2" Text="To:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                <DatePicker Grid.Column="3" Margin="0,0,20,0"/>
                
                <Button Grid.Column="5" Content="Filter" Padding="15,5" Background="#3E91FF" Foreground="White" BorderThickness="0"/>
            </Grid>
        </StackPanel>
        
        <!-- Sales Data Table -->
        <DataGrid Grid.Row="1" AutoGenerateColumns="False" IsReadOnly="True" Margin="20">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Order ID" Width="100" Binding="{Binding OrderId}"/>
                <DataGridTextColumn Header="Date" Width="150" Binding="{Binding Date}"/>
                <DataGridTextColumn Header="Time" Width="100" Binding="{Binding Time}"/>
                <DataGridTextColumn Header="Items" Width="*" Binding="{Binding Items}"/>
                <DataGridTextColumn Header="Total Amount" Width="120" Binding="{Binding TotalAmount}"/>
                <DataGridTextColumn Header="Payment Method" Width="150" Binding="{Binding PaymentMethod}"/>
                <DataGridTemplateColumn Header="Actions" Width="100">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Content="View" Background="#4CAF50" Foreground="White" BorderThickness="0" Padding="10,2"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
