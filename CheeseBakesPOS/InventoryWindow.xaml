<Window x:Class="CheeseBakesPOS.InventoryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CheeseBakesPOS"
        mc:Ignorable="d"
        Title="Inventory" Height="600" Width="900">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <StackPanel Grid.Row="0" Margin="20,20,20,10">
            <TextBlock Text="Inventory" FontSize="24" FontWeight="Bold"/>
            
            <Grid Margin="0,20,0,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Filter by Category:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                    <ComboBox Width="150" SelectedIndex="0" SelectionChanged="CategoryFilter_Changed">
                        <ComboBoxItem Content="All Categories"/>
                        <ComboBoxItem Content="Short Eats"/>
                        <ComboBoxItem Content="Sweets"/>
                        <ComboBoxItem Content="Cakes"/>
                    </ComboBox>
                </StackPanel>
                <Button Grid.Column="1" Content="Update Inventory" Padding="15,5" Background="#3E91FF" Foreground="White" BorderThickness="0" Click="UpdateInventory_Click"/>
            </Grid>
        </StackPanel>
        
        <!-- Inventory Data Grid -->
        <Grid Grid.Row="1" Margin="20">
            <TabControl>
                <!-- Each tab represents a category -->
                <TabItem Header="Short Eats">
                    <DataGrid AutoGenerateColumns="False" IsReadOnly="False">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="ID" Width="60" Binding="{Binding Id}" IsReadOnly="True"/>
                            <DataGridTextColumn Header="Name" Width="150" Binding="{Binding Name}" IsReadOnly="True"/>
                            <DataGridTextColumn Header="Current Stock" Width="100" Binding="{Binding InStock}"/>
                            <DataGridTextColumn Header="Reorder Level" Width="100" Binding="{Binding ReorderLevel}"/>
                            <DataGridTextColumn Header="Price" Width="100" Binding="{Binding Price}" IsReadOnly="True"/>
                            <DataGridTemplateColumn Header="Status" Width="120">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding Status}" Foreground="{Binding StatusColor}"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTemplateColumn Header="Actions" Width="*">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal">
                                            <Button Content="Add Stock" Background="#4CAF50" Foreground="White" BorderThickness="0" Padding="10,2" Margin="0,0,5,0"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </TabItem>
                
                <TabItem Header="Sweets">
                    <!-- Similar DataGrid structure as Short Eats -->
                </TabItem>
                
                <TabItem Header="Cakes">
                    <!-- Similar DataGrid structure as Short Eats -->
                </TabItem>
            </TabControl>
        </Grid>
    </Grid>
</Window>
